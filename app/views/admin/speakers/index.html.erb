<p id="notice"><%= notice %></p>

<h1>Listing Speakers</h1>

<%= link_to 'New Speaker', new_admin_speaker_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Url</th>
      <th>Meeting</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @speakers.each do |speaker| %>
      <tr>
        <td><%= speaker.name %></td>
        <td><%= speaker.title %></td>
        <td><%= speaker.url %></td>
        <td><%= speaker.meeting.try(:time) %></td>
        <td><%= link_to 'Show', admin_speaker_path(speaker) %></td>
        <td><%= link_to 'Edit', edit_admin_speaker_path(speaker) %></td>
        <td><%= link_to 'Destroy', admin_speaker_path(speaker), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
